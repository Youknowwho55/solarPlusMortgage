<!-- @format -->

<div
  class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center py-2 mb-3 border-bottom"
>
  <h1>User Settings</h1>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-8">
      <!-- Settings Form -->
      <form>
        <div class="row mb-3">
          <label for="firstName" class="col-sm-2 col-form-label"
            >First Name:</label
          >
          <div class="col-sm-10">
            <input
              type="text"
              value="<%= user.firstName %>"
              id="firstName"
              name="firstName"
              readonly
            />
          </div>
        </div>

        <div class="row mb-3">
          <label for="lastName" class="col-sm-2 col-form-label"
            >Last Name:</label
          >
          <div class="col-sm-10">
            <input
              type="text"
              value="<%= user.lastName %>"
              id="lastName"
              name="lastName"
              readonly
            />
          </div>
        </div>

        <div class="row mb-3">
          <label for="nmls" class="col-sm-2 col-form-label">NMLS ID:</label>
          <div class="col-sm-10">
            <input
              type="text"
              value="<%= user.nmls %>"
              id="nmls"
              name="nmls"
              readonly
            />
          </div>
        </div>
        <div class="row mb-3">
          <label for="company" class="col-sm-2 col-form-label">Company:</label>
          <div class="col-sm-10">
            <input
              type="text"
              value="<%= user.company %>"
              id="company"
              name="company"
              readonly
            />
          </div>
        </div>
      </form>

      <h6 class="py-2">External Connections:</h6>
      <div class="row col-md-11 mb-3">
        <label for="connect" class="col-sm-3 col-form-label"
          >Connect to Google:</label
        >
        <div class="col-sm-8 pb-5">
          <a class="btn btn-warning" href="/auth/google" role="button">
            <i class="bx bxl-google"></i>
            Sign in with Google</a
          >
        </div>

        <div class="row col-md-11 mb-3">
          <label for="connect" class="col-sm-3 col-form-label"
            >Connect to GHL:</label
          >
          <div class="col-sm-8 pb-5">
            <a class="btn btn-secondary" href="/auth/GHL" role="button">
              <i class="bx bx-leaf"></i>
              Sign in with GHL</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
