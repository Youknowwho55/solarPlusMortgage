<!-- @format -->

<!--  instead of the edit page, this will be the same but is assiming the entity has already beed created
    this is when the "enter" butt n is clicked FOR THE INDIVIDUAL ID REQUESTED %>-->

<%- include('../partials/_tabs.ejs') %>
<div
  class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3"
>
  <h3 class="pt-3">Borrower Info:</h3>
  <button type="submit" class="btn btn-primary">Save</button>
</div>

<!-- Start People -->

<form
  class="row g-3"
  action="/borrowersMtg/people/<%= borrowerMtg.id %>?_method=PUT"
  method="POST"
>
  <div class="row mb-3 pb-2 border-bottom">
    <label for="loanOfficer" class="col-sm-2 col-form-label"
      >Loan Officer</label
    >
    <div class="col-sm-2">
      <input
        value="<%= borrowerMtg.loanOfficer %>"
        type="text"
        name="loanOfficer"
        id="loanOfficer"
        class="form-control"
        readonly
      />
    </div>
    <label for="processor" class="col-sm-2 col-form-label">Processor</label>
    <div class="col-sm-2">
      <input
        value="<%= borrowerMtg.processor %>"
        type="text"
        name="processor"
        id="processor"
        class="form-control"
        readonly
      />
    </div>
    <label for="referral" class="col-sm-2 col-form-label"
      >Referral Source</label
    >
    <div class="col-sm-2">
      <input
        value="<%= borrowerMtg.referral %>"
        type="text"
        name="referral"
        id="referral"
        class="form-control"
        readonly
      />
    </div>
  </div>
  <!-- End People -->

  <div class="col-5">
    <label for="firstName" class="form-label">First Name</label>

    <input
      required
      value="<%= borrowerMtg.firstName %>"
      type="text"
      name="firstName"
      id="firstName"
      class="form-control"
    />
  </div>
  <div class="col-5">
    <label for="lastName" class="form-label">Last Name</label>
    <input
      required
      value="<%= borrowerMtg.lastName %>"
      type="text"
      class="form-control"
      name="lastName"
      id="lastName"
    />
  </div>
  <div class="col-4">
    <label for="phoneNumber" class="form-label">Phone Number</label>
    <input
      value="<%= borrowerMtg.phoneNumber %>"
      type="text"
      name="phoneNumber"
      id="phoneNumber"
      class="form-control"
    />
  </div>
  <div class="col-6">
    <label for="email" class="form-label">Email</label>
    <input
      value="<%= borrowerMtg.email %>"
      type="text"
      name="email"
      id="email"
      class="form-control"
    />
  </div>

  <h5>Primary Address</h5>
  <div class="col-8">
    <label for="inputAddress" class="form-label">Address</label>
    <input
      value="<%= borrowerMtg.street %>"
      type="text"
      name="street"
      id="street"
      class="form-control"
    />
  </div>
  <div class="col-8">
    <label for="inputAddress2" class="form-label">Address 2</label>
    <input
      value="<%= borrowerMtg.streetLine2 %>"
      type="text"
      name="streetLine2"
      id="streetLine2"
      class="form-control"
    />
  </div>
  <div class="col-md-5">
    <label for="inputCity" class="form-label">City</label>
    <input
      value="<%= borrowerMtg.city %>"
      type="text"
      name="city"
      id="city"
      class="form-control"
    />
  </div>
  <div class="col-md-3">
    <label for="inputState" class="form-label">State</label>
    <input
      value="<%= borrowerMtg.state %>"
      type="text"
      name="state"
      id="state"
      class="form-control"
    />
  </div>
  <div class="col-md-2">
    <label for="inputZip" class="form-label">Zip</label>
    <input
      value="<%= borrowerMtg.zipCode %>"
      type="text"
      name="zipCode"
      id="zipCode"
      class="form-control"
    />
  </div>
</form>

<h4 class="pt-4">Subject Property</h4>

<div><%- include('../partials/_properties.ejs') %></div>
